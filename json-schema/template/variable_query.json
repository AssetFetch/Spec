{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "Variable Query Template",
	"$id": "af.template.variable_query",
	"description": "This template describes a variable query that is configurable by the user.",
	"type": "object",
	"properties": {
		"uri": {
			"type": "string",
			"format": "uri"
		},
		"method": {
			"type": "string",
			"enum": [
				"get",
				"post"
			]
		},
		"parameters": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"type": {
						"type": "string",
						"enum": [
							"text",
							"boolean",
							"fixed",
							"select"
						]
					},
					"id": {
						"type": "string"
					},
					"title": {
						"type": "string"
					},
					"default": {
						"type": "string"
					},
					"choices": {
						"anyOf": [
							{
								"type": "null"
							},
							{
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"value": {
											"type": "string"
										},
										"title": {
											"type": "string"
										}
									},
									"required": ["value","title"]
								}
							}
						]
					}
				},
				"if": {
					"properties": {
						"type": {
							"const":"select"
						}
					}
				},
				"then": {
					"properties": {
						"choices": {
							"minItems": 1
						}
					},
					"required": [
						"choices"
					]
				},
				"required": [
					"type",
					"id"
				]
			}
		}
	},
	"required": [
		"uri",
		"method",
		"parameters"
	]
}