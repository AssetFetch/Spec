{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Variable Query Template",
	"$id": "af.template.variable_query",
	"description": "This template describes a variable query that is configurable by the user.",
	"type": "object",
	"properties": {
		"uri": {
			"type": "string",
			"format": "uri"
		},
		"method": {
			"type": "string",
			"enum": [
				"get",
				"post"
			]
		},
		"parameters": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"type": {
						"type": "string",
						"enum": [
							"text",
							"boolean",
							"fixed",
							"select",
							"multiselect"
						]
					},
					"id": {
						"type": "string"
					},
					"title": {
						"type": "string"
					},
					"default": {
						"type": "string"
					},
					"mandatory": {
						"type": "boolean"
					},
					"choices": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"value": {
									"type": "string"
								},
								"title": {
									"type": "string"
								}
							}
						}
					}
				},
				"if": {
					"properties": {
						"type": {
							"enum": [
								"select",
								"multiselect"
							]
						}
					}
				},
				"then": {
					"required": [
						"choices"
					]
				},
				"required": [
					"type",
					"name"
				]
			}
		}
	},
	"required": [
		"uri",
		"method",
		"parameters"
	]
}