{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Variable Query Template",
	"$id": "/template/variable_query.json",
	"type": "object",
	"properties": {
		"uri": {
			"type": "string",
			"format": "uri"
		},
		"method": {
			"type": "string",
			"enum": [
				"GET",
				"POST"
			]
		},
		"parameters": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"type": {
						"type": "string",
						"enum": [
							"text",
							"boolean",
							"hidden",
							"select",
							"multiselect"
						]
					},
					"name": {
						"type": "string"
					},
					"title": {
						"type": "string"
					},
					"default": {
						"type": "string"
					},
					"mandatory": {
						"type": "boolean"
					},
					"choices": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"delimiter": {
						"type": "string"
					}
				},
				"required": [
					"type",
					"name"
				]
			}
		}
	},
	"required": [
		"uri",
		"method",
		"parameters"
	]
}