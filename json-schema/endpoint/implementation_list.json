{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "Endpoint: implementation_list",
	"$id": "af.endpoint.implementation_list",
	"description": "This endpoint gets the list of possible implementations for a specific asset.",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"meta": {
			"$ref": "../template/meta.json",
			"properties": {
				"meta": {
					"properties": {
						"kind": {
							"const": "implementation_list"
						}
					}
				}
			}
		},
		"data": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"unlock_queries": {
					"$ref": "../datablock/unlock_queries.json"
				}
			}
		},
		"implementations": {
			"type": "array",
			"items": {
				"type": "object",
				"additionalProperties": false,
				"properties": {
					"id": {
						"$comment": "A unique id for this implementation.",
						"type": "string",
						"pattern": "[a-zA-Z0-9\\._]+"
					},
					"data": {
						"type": "object",
						"text": {
							"$ref": "../datablock/text.json"
						}
					},
					"components": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"id": {
									"type": "string",
									"pattern": "[a-zA-Z0-9\\._]+"
								},
								"data": {
									"type": "object",
									"additionalProperties": false,
									"properties": {
										"fetch.from_archive": {
											"$ref": "../datablock/fetch.from_archive.json"
										},
										"fetch.download": {
											"$ref": "../datablock/fetch.download.json"
										},
										"role.loose_material_map": {
											"$ref": "../datablock/role.loose_material_map.json"
										},
										"role.loose_environment_map": {
											"$ref": "../datablock/role.loose_environment_map.json"
										},
										"role": {
											"$ref": "../datablock/role.json"
										},
										"format": {
											"$ref": "../datablock/format.json"
										},
										"format.obj": {
											"$ref": "../datablock/format.obj.json"
										},
										"format.blend": {
											"$ref": "../datablock/format.blend.json"
										},
										"link.loose_material": {
											"$ref": "../datablock/link.loose_material.json"
										},
										"link.mtlx_material": {
											"$ref": "../datablock/link.mtlx_material.json"
										},
										"text": {
											"$ref": "../datablock/text.json"
										}
									},
									"allOf": [
										{
											"oneOf": [
												{
													"required": [
														"fetch.from_archive"
													]
												},
												{
													"required": [
														"fetch.download"
													]
												}
											]
										},
										{
											"oneOf": [
												{
													"required": [
														"role"
													]
												},
												{
													"required": [
														"role.loose_environment_map"
													]
												},
												{
													"required": [
														"role.loose_material_map"
													]
												}
											]
										},
										{
											"oneOf": [
												{
													"required": [
														"format"
													]
												},
												{
													"required": [
														"format.obj"
													]
												},
												{
													"required": [
														"format.blend"
													]
												}
											]
										},
										{
											"if": {
												"anyOf": [
													{
														"required": [
															"link.loose_material"
														]
													},
													{
														"required": [
															"link.mtlx_material"
														]
													}
												]
											},
											"then": {
												"oneOf": [
													{
														"required": [
															"link.loose_material"
														]
													},
													{
														"required": [
															"link.mtlx_material"
														]
													}
												]
											}
										}
									]
								}
							}
						}
					}
				}
			}
		}
	},
	"required": [
		"meta",
		"data",
		"implementations"
	]
}