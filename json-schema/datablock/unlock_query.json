{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Unlock Query Datablock",
	"$id": "/datablock/unlock_query.json",
	"$comment": "",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"unlock_query": {
			"oneOf": [
				{
					"type": "null"
				},
				{
					"$ref": "../template/fixed_query.json"
				}
			]
		},
		"unlock_query_fallback_uri": {
			"type": "string",
			"format": "uri"
		},
		"total_charges":{
			"type":"number"
		},
		"composition": {
			"type": "array",
			"minItems": 1,
			"additionalItems": false,
			"items": {
				"type": "object",
				"properties": {
					"title": {
						"type": "string"
					},
					"price": {
						"type": "number"
					},
					"already_owned":{
						"type":"boolean"
					}
				},
				"additionalProperties": false,
				"required": [
					"title",
					"price",
					"already_owned"
				]
			}
		}
	},
	"required": [
		"state"
	],
	"if": {
		"properties": {
			"state": {
				"enum": [
					"locked",
					"partially_locked"
				]
			}
		}
	},
	"then": {
		"oneOf": [
			{
				"required": [
					"unlock_query",
					"unlock_charges"
				]
			},
			{
				"required": [
					"unlock_query_fallback_uri"
				]
			}
		]
	}
}