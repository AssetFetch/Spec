{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Provider Configuration Datablock",
	"$id": "/datablock/provider_configuration.json",
	"type": "object",
	"properties": {
		"acquisition_uri": {
			"type": "string",
			"format": "uri"
		},
		"acquisition_uri_title": {
			"type": "string",
			"format": "uri"
		},
		"headers": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"default": {
						"type": "string"
					},
					"is_required": {
						"type": "boolean"
					},
					"is_sensitive": {
						"type": "boolean"
					},
					"prefix": {
						"type": "string"
					},
					"suffix": {
						"type": "string"
					},
					"title": {
						"type": "string"
					},
					"encoding": {
						"type":"string",
						"enum": ["plain","base64"]
					}
				},
				"required": [
					"name",
					"is_sensitive",
					"is_required"
				]
			}
		},
		"connection_status_query": {
			"$ref":"../template/fixed_query.json"
		}
	},
	"required": [
		"headers",
		"connection_status_query"
	]
}