{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Unlocking State Datablock",
	"$id": "/datablock/unlock_state.json",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"locked":{
			"type":"boolean"
		},
		"price":{
			"type":"number"
		},
		"unlock_query":{
			"$ref": "/template/fixed_query.json"
		},
		"unlock_query_fallback_uri":{
			"type":"string",
			"format": "uri"
		}
	},
	"required": ["locked"],
	"if":{
		"required": ["unlock_query"]
	},
	"then": {
		"required": ["price"]
	}
}