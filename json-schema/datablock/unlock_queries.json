{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Unlock Queries Datablock",
	"$id": "af.datablock.unlock_queries",
	"description": "This datablock describes the unlocking queries a specific asset.",
	"type": "array",
	"items": {
		"$comment": "",
		"type": "object",
		"additionalProperties": false,
		"properties": {
			"id": {
				"type": "string"
			},
			"unlocked": {
				"type": "boolean"
			},
			"price": {
				"type": "number"
			},
			"unlock_query": {
				"$ref": "../template/fixed_query.json"
			},
			"unlock_query_fallback_uri": {
				"oneOf": [
					{
						"type": "string",
						"format": "uri"
					},
					{
						"type": "null"
					}
				]
			}
		},
		"required": [
			"id",
			"unlocked"
		],
		"if": {
			"properties": {
				"unlocked": {
					"const": false
				}
			}
		},
		"then": {
			"required": [
				"price",
				"unlock_query"
			]
		}
	}
}