{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "File Info Datablock",
	"$id": "/datablock/next_query.json",
	"type":"object",
    "properties": {
        "local_path":{
            "type":"string"
        },
        "length":{
            "type":"integer",
            "minimum": 0
        },
        "extension":{
            "type":"string",
            "pattern": "(\\.[a-z0-9]+)+"
        },
        "behavior":{
            "type":"string",
            "enum": ["file_active","file_passive","archive"]
        }
    }
}